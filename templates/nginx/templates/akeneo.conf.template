# Upstream block for backend services
upstream akeneo_backend {
    server ${AKENEO_PHP_FPM_PORT};
}

# HTTP Server - Redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name ${AKENEO_DOMAIN};
    
    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ${AKENEO_DOMAIN};
    
    # SSL Certificate Configuration
    ssl_certificate /etc/nginx/certs/akeneo.local.crt;
    ssl_certificate_key /etc/nginx/certs/akeneo.local.key;
    
    # SSL Security Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    root ${AKENEO_DIRECTORY};
    index index.php;
    
    client_max_body_size 25m;
    
    access_log /var/log/nginx/akeneo.access.log;
    error_log  /var/log/nginx/akeneo.error.log;
    
    location / {
        try_files $uri /index.php$is_args$args;
    }
    
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass akeneo_backend;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTP_AUTHORIZATION $http_authorization;
        fastcgi_param HTTPS on;
        fastcgi_intercept_errors on;
    }
    
    location /bundles {
        autoindex off;
    }
}
